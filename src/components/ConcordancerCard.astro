---
interface Props {
    concordancer: Concordancer;
}
const { concordancer } = Astro.props;
import { CORPORA } from '../data'
---

<div class="card">
    <div>
        <a href={concordancer.link}>{concordancer.name.ja}</a>
        <a
            class="author"
            href={concordancer.author.link}
            title={concordancer.author.name.en}
        >{concordancer.author.abbr}</a>
    </div>

    <ul>
        {concordancer.corpora.map((corpus) => (
            <li>
                <a href={`/corpora/${corpus}`}>{CORPORA.find((c) => c.id === corpus)?.name?.ja ?? corpus}</a>
            </li>
        ))}
    </ul>
    
    <a class="button" href={`/concordancers/${concordancer.id}`}>View Details</a>
</div>

<style>
    .card {
        justify-content: space-between;
        padding: 1rem;

        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);

        display: grid;
        grid-template-columns: 1fr auto;
        gap: 1rem;
    }

    a {
        color: #fff;
        text-decoration: none;
    }

    a.author {
        margin-left: 1rem;
        font-size: 0.8rem;
        color: #ccc;
    }

    a.button {
      @apply py-2 px-4 bg-blue-500 bg-opacity-50 text-white rounded border-blue-500 border-2;
      grid-column: span 2;
    }
</style>