---
interface Props {
    concordancer: Concordancer;
}
const { concordancer } = Astro.props;
import { CORPORA } from '../data'
---

<div class="card">
    <div>
        <a href={concordancer.link}>{concordancer.name}</a>
        <a
            class="author"
            href={concordancer.author.link}
            title={concordancer.author.name.en}
        >{concordancer.author.abbr}</a>
    </div>

    <ul>
        {concordancer.corpora.map((corpus) => (
            <li>
                <a href={`#${corpus}`}>{CORPORA.find((c) => c.id === corpus)?.name?.ja ?? corpus}</a>
            </li>
        ))}
    </ul>
</div>

<style>
    .card {
        justify-content: space-between;
        padding: 1rem;

		display: flex;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    a {
        color: #fff;
        text-decoration: none;
    }

    a.author {
        margin-left: 1rem;
        font-size: 0.8rem;
        color: #ccc;
    }
</style>